{
  "manifest_version": 2,

  "name": "fb cleanr",
  "version": "1.0",
  "description": "remove the ad-sidebar from fb",
  "author": "A.Reed",

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "fb cleanr"
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "offline_enabled": true,
  "permissions": ["https://www.facebook.com/*"],

  "content_scripts": [
      {
          "matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"],
          "js": ["event.js"]
      }
  ]
}